---
import { projects } from "../../data/proyects";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";


export async function getStaticPaths() {
  return projects.map((proyect) => ({
    params: { id: proyect.id },
    props: { proyect },
  }));
}

const { proyect } = Astro.props;
const { image, title, descriptionPage, responsabilidades, technologies } =
  proyect;
---

<Layout title={`${title}`}>
  <main class="bg-background">
    <div class="flex justify-center">
      <Navbar />
    </div>
    <section class="pt-32 md:pt-44 pb-40 flex flex-col items-center justify-center">
      <div
        class="font-raleway text-white md:w-3/4 flex flex-col gap-4 pb-8 mx-3.5"
      >
        <div class="">
          <span class="text-base">FullStack developer</span>
        </div>

        <div class="">
          <h1 class="typing py-1 w-fit border-r-2 border-white uppercase text-3xl md:text-4xl font-bold bg-gradient-to-r from-fst to-snd bg-clip-text text-transparent">
            {title}
          </h1>
          <p class="font-light text-base my-3.5">
            Pagina de ropa realizada como proyecto Final para el programa
            Desarrollador FullStack JavaScript/Node.js
          </p>
        </div>

        <div class="overflow-hidden rounded-md">
          <img
            src={`${image}`}
            alt="imagen-proyecto"
            class="w-full h-auto object-cover"
          />
        </div>

        <div class="py-3.5 px-2.5 flex flex-col gap-2">
          <h2 class="font-bold text-2xl after:block after:w-20 after:h-1 after:mt-1 after:bg-fst">Descripción</h2>
          <p class=" font-light my-3.5">{descriptionPage}</p>
        </div>

        <div class="py-3.5 px-2.5 flex flex-col gap-2">
          <h2 class="font-bold text-2xl after:block after:mt-1 after:w-20 after:h-1 after:bg-fst">Responsabilidades</h2>
          <p class="font-ligh my-3.5">{responsabilidades}</p>
        </div>

        <div class="py-3.5 px-2.5 flex flex-col gap-2">
          <h2 class="font-bold text-2xl after:block after:w-20 after:h-1 after:mt-1 after:bg-fst">Tecnologías</h2>
          <div class="flex flex-wrap gap-5 items-center justify-center font-light text-base  py-3.5 px-2.5">
            {
            technologies.map((tech) => 
              <p class="rounded-lg p-2 shadow-[0_2px_2px_var(--color-snd)]">{tech}</p>
            )
            }
          </div>
        </div>
      </div>
    </section>
    <Footer />
  </main>
</Layout>
