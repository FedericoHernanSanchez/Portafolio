---
import { iconsSvg } from "../data/iconsSvg";

interface Props {
    image: string;
    title: string;
    description: string;
    technologies: string[];
    githubUrl: string;
    liveUrl: string;
}

const { title, image, description, technologies, githubUrl, liveUrl } =
    Astro.props;
---

<div
    class="flex flex-col font-raleway text-white bg-[#1e1e1e] shadow-[0_4px_20px_#0000004d] border-1 border-[#2a2a2a] rounded-lg overflow-hidden hover:border-snd hover:border-1 hover:shadow-[0_1px_9px_#a641ff] hover:-translate-y-2 transition-all duration-300 ease-in"
>
    <!-- Header Card -->
    <div class="">
        <img
            src={image}
            alt="imagen-pagina"
            class="w-full h-[230px] object-cover"
        />
    </div>
    <!-- Contenido card -->
    <div class="flex flex-col flex-grow py-2.5 px-5">
        <h3 class="font-bold text-xl">{title} - Tienda de ropa</h3>
        <p class=" text-gray-300 text-sm my-3 leading-6">{description}</p>
        <div class="flex flex-wrap gap-1.5 mb-5 ">
            {
            technologies.map((t) => (
                <span class="text-xs font-medium border text-white/80 border-[#a641ff] bg-[#a641ff]/20 py-1 px-2.5 rounded-md" >{t}</span >
            ))}
        </div>

        <div class="flex gap-3 mt-auto max-[900px]:flex-col">
            <a href={githubUrl} target="_blank" class="flex flex-1 items-center justify-center bg-white/10 hover:bg-white/15 hover:-translate-y-0.5 border border-white/20 gap-2 py-2.5 px-4 rounded-lg font-semibold no-underline text-sm transition-all duration-200 ease-in">
                <img src={iconsSvg["Git"]} alt="git-icon" class="w-4 h-4 text-white" />
                GitHub
            </a>
            <a href={liveUrl} target="_blank" class="flex flex-1 items-center justify-center  hover:-translate-y-0.5 bg-[#a641ff]/50 gap-2 py-2.5 px-4 rounded-lg font-semibold no-underline text-sm transition-all duration-200 ease-in">
                <img src={iconsSvg["world"]} alt="link-icon" class="w-4 h-4 text-white" />
                Ver Proyecto
            </a>
        </div>
    </div>
</div>
