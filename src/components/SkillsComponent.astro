---
import "../styles/global.css";

interface Props {
    title: string;
    iconsName: string[];
}

const { title, iconsName } = Astro.props;
---

<div class="flex-1 flex flex-col items-center gap-5 p-5 rounded-3xl sm:shadow-[0_1px_9px_var(--color-snd)] sm:max-w-80 lg:max-w-full">
    <h3 class="text-2xl font-light">{title}</h3>
    <div class="flex flex-wrap justify-center items-center gap-8 lg:gap-10">
        {
            iconsName.map((icon) => (
                <div class="div-icons">
                    <svg class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12">
                        <use href={`/spriteSVG/sprite.svg#${icon}`} />
                    </svg>
                    <p class="text-sm ">{icon}</p>
                </div>
            ))
        }
    </div>
</div>
