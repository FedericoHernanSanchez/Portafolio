---
import { iconsSvg } from "../data/iconsSvg";
import type { IconName } from "../types/icons";
import "../styles/global.css";


interface Props {
    title: string;
    iconsName: IconName[];
}

const { title, iconsName } = Astro.props;
---

<div class="flex-1 flex flex-col items-center gap-5 p-5 rounded-3xl max-w-64 shadow-[0_2px_10px_#a641ff] sm:max-w-120 lg:max-w-full">
    <h3 class="text-2xl font-light">{title}</h3>
    <div class="flex flex-wrap justify-center items-center gap-8 lg:gap-10">
        {
            iconsName.map((icon) => (
                <div class="div-icons">
                    <img src={iconsSvg[icon]} alt={icon} class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12">
                    <p class="text-[13px] ">{icon}</p>
                </div>
            ))
        }
    </div>
</div>
